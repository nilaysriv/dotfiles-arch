# ╔══════════════════════════════════════════════════════════════════════════════╗
# ║                          Window Rules Configuration                          ║
# ║                            Using windowrule Syntax                           ║
# ╚══════════════════════════════════════════════════════════════════════════════╝

# ╔══════════════════════════════════════════════════════════════════════════════╗
# ║                               KDE Applications                               ║
# ╚══════════════════════════════════════════════════════════════════════════════╝

windowrule {
    match:class = ^(org.kde.kdeconnect)
    float = on
    size = 500 600
}

# ╔══════════════════════════════════════════════════════════════════════════════╗
# ║                             System Applications                              ║
# ╚══════════════════════════════════════════════════════════════════════════════╝

windowrule {
    match:class = ^(nm-connection-editor)$
    float = on
    size = 600 500
    center = on
}

windowrule {
    match:class = ^(blueman-manager)$
    float = on
    size = 800 600
    center = on
}

windowrule {
    match:class = ^(blueman-adapters)$
    float = on
}

windowrule {
    match:class = ^(pavucontrol)$
    float = on
    size = 800 600
    center = on
}

windowrule {
    match:title = ^(btop)$
    float = on
    size = 1200 800
    center = on
}

# ╔══════════════════════════════════════════════════════════════════════════════╗
# ║                                 Rofi Windows                                 ║
# ╚══════════════════════════════════════════════════════════════════════════════╝

windowrule {
    match:class = ^(Rofi)$
    float = on
    stayfocused = on
    noborder = on
    dimaround = on
}

# ╔══════════════════════════════════════════════════════════════════════════════╗
# ║                          Waypaper (Wallpaper Picker)                         ║
# ╚══════════════════════════════════════════════════════════════════════════════╝

windowrule {
    match:class = ^(waypaper)$
    float = on
    size = 1000 700
    center = on
}

# ╔══════════════════════════════════════════════════════════════════════════════╗
# ║                             Flatpak Applications                             ║
# ╚══════════════════════════════════════════════════════════════════════════════╝

windowrule {
    match:class = ^(me.kozec.syncthingtk)$
    float = on
    size = 900 700
}

# ╔══════════════════════════════════════════════════════════════════════════════╗
# ║                             Notification Daemon                              ║
# ╚══════════════════════════════════════════════════════════════════════════════╝

windowrule {
    match:class = ^(dunst)$
    float = on
    noborder = on
}

# ╔══════════════════════════════════════════════════════════════════════════════╗
# ║                              Picture-in-Picture                              ║
# ╚══════════════════════════════════════════════════════════════════════════════╝

windowrule {
    match:title = ^(Picture-in-Picture)$
    float = on
    pin = on
    size = 640 360
}

windowrule {
    match:title = ^(.*is sharing your screen)$
    float = on
    move = 0 0
}

# ╔══════════════════════════════════════════════════════════════════════════════╗
# ║                               Dialog Windows                                 ║
# ╚══════════════════════════════════════════════════════════════════════════════╝

windowrule {
    match:title = ^(Open File|Save File|Save As|Choose File|Select File)$
    float = on
    center = on
}

# ╔══════════════════════════════════════════════════════════════════════════════╗
# ║                          Layer Rules (for overlays)                          ║
# ╚══════════════════════════════════════════════════════════════════════════════╝

layerrule = blur on, match:namespace waybar
layerrule = blur on, match:namespace rofi
